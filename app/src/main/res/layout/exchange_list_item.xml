<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_16sdp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:text="@string/threePoint"
            android:textColor="@color/black33"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:text="@string/threePoint"
            android:fontFamily="@font/iranyekanmobilebold"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black33"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:text="تومان"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black8E"
                android:fontFamily="@font/iranyekanmobilelight"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtChange"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="@string/threePoint"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:background="@drawable/rate_positiv"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/_6sdp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@color/divider"
        android:layout_height="0.5dp"/>

</LinearLayout>
