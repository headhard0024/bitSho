<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    android:layoutDirection="rtl"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black33"
            android:text=" اگر اپلیکیشنی  که در اختیارتونه مشکلی داره و فکر میکنید باید برطرف بشه خوشحال میشیم به ما اطلاع بدید\n و اگر میشه جای از برنامه رو بهتر کرد خیلی خیلی خوشحال میشیم که بهمون خبر بدید و مارو راهنمایی کنید \n با تشکر:)"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="6dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_8sdp"
            android:gravity="center"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="ایمیل"
            android:background="@drawable/button_color_accent"
            android:textColor="@color/justWhite"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnTelegram"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="تلگرام"
            android:background="@drawable/button_color_accent"
            android:textColor="@color/justWhite"
            android:textSize="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>