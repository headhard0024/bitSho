<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layCheckLight"
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center|right"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCheckLight"
                android:layout_width="@dimen/_20sdp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check_approved"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="روشن"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black33"
                android:fontFamily="@font/iranyekanmobilemedium"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/divider"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/layCheckDark"
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:gravity="center|right"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgCheckDark"
                android:layout_width="@dimen/_20sdp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check_approved"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="تیره"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black33"
                android:fontFamily="@font/iranyekanmobilemedium"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/divider"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/layCheckDefault"
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:gravity="center|right"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgCheckDefault"
                android:layout_width="@dimen/_20sdp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check_approved"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="همگام با حالت دستگاه"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black33"
                android:fontFamily="@font/iranyekanmobilemedium"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>