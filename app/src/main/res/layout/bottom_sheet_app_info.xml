<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    android:layoutDirection="rtl"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black33"
            android:text="اپلیکیشنی که در اختیار شماست به صورت کاملا رایگان و میتوانید هرطور که خواستید ازش استفاده کنید. \n اگه از این برنامه خوشتون اومد و دوست داشتید توسعش ادامه دار باشه میتونید مارو همایت کنید."
            android:fontFamily="@font/iranyekanmobilemedium"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="6dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSupport"
            android:layout_width="match_parent"
            android:text="همایت"
            android:layout_gravity="center"
            android:background="@drawable/button_color_accent"
            android:textColor="@color/justWhite"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_margin="@dimen/_16sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black33"
            android:lineSpacingExtra="6dp"
            android:textSize="@dimen/_14sdp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:text="منابع و سرویس های به کار رفته در این برنامه \n www.parsijoo.ir/api \n www.api.coinlore.net/api"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black33"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_14sdp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:text="در آخر اگر دوست داشتید خودتون برنامه رو ارتقاء بدید و اندروید نوشتن رو دوست دارید میتونید سورس برنامه رو از اینجا دریافت کنید :)"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSource"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_16sdp"
            android:text="سورس برنامه"
            android:layout_gravity="center"
            android:background="@drawable/button_color_accent"
            android:textColor="@color/justWhite"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/iranyekanmobilemedium"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>